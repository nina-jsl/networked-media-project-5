{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": false,
  },
  "include": ["index.ts"],
  "exclude": ["node_modules"]
}